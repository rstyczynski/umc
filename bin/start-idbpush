#!/bin/bash
# idbpush daemon script 

# the script directory
scriptDir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source $scriptDir/umc.h &>/dev/null

if [ "$UMCRUNNER_CONFIG" = "" ] || [ "$UMC_LOG_DIR" = "" ]; then
  echo "umc environment has not been initialized!"
  exit 1
fi

dir="$UMC_LOG_DIR/idbpush"
mkdir -p $dir

$scriptDir/idbpush $* &>$dir/idbpush-$HOSTNAME.out &
if [ "$?" -eq 0 ]; then
        echo "idbpush started, out log is in $dir/idbpush-$HOSTNAME.out"
else
	echo "error occurred when starting idbpush!"
fi
