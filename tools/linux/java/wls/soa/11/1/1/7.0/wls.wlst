def dumpWlsCSV(subsystems=[]):
    #
    if len(subsystems)==0:
        subsystems = allSubsystems
    #    
    for subsystem in subsystems:
        for id in allSubsystemsId[subsystem]:
            if id in data:
                if type(data[id]) is dict:
                    for row in data[id]:
                        if len(subsystems)>1:
                            print '>>>' + str(id) + ':DATA:', 
                        print data[id][row]
                else:
                    if len(subsystems)>1:
                        print '>>>' + str(id) + ':DATA:', 
                    print data[id]
#
def getSelectedIds(subsystems=[]):
    #
    if len(subsystems)==0:
        subsystems = allSubsystems
    #
    selectedIds = []
    for subsystem in subsystems:
        for id in allSubsystemsId[subsystem]:
            selectedIds.append(id)
    return selectedIds    
