def dumpWlsHeadersCSV():
    ids = header.keys()
    ids.sort()
    
    if len(ids) > 1:
        for id in ids:
            print '>>>' + str(id) + ':HEADER:', 
            print header[id]
    else:
        print header[ids[0]]
#
def wlsstat(subsystems=[], count=10, interval=1):
    collectWLSdata(subsystems)
    dumpWlsHeadersCSV()
    dumpWlsCSV(subsystems)
    
    count = count - 1
    while count >0:
      java.lang.Thread.sleep(interval * 1000)
      dumpWlsCSV(subsystems)
      collectWLSdata(subsystems)
      count = count - 1
#
